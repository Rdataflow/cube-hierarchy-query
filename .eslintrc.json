{
  "extends": [ "@tpluscode" ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "no-undef": "off"
  },
  "overrides": [{
    "files": ["*.test.ts"],
    "rules": {
      "no-unused-expressions": "off"
    }
  }, {
    "files": "examples/*",
    "rules": {
      "no-console": "off",
      "import/no-extraneous-dependencies": "off"
    }
  }]
}
